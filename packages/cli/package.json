    "postbuild": "npm run build:types",
    "build:types": "tsc",
    "preversion": "npm run build"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@opas/core": "^0.10.0",
    "@opas/plugin-app": "^0.9.0",
    "@pixas/babel-preset-app": "^0.11.0",
    "@pixas/bundler-base": "^0.11.0",
    "@pixas/common": "^0.11.0",
    "@pixas/eslint-config": "^0.11.0",
    "@pixas/prettier-config": "^0.11.0",
    "@pixas/stylelint-config": "^0.11.0",
    "chalk": "^4.1.2",
    "commander": "11.1.0",
    "core-js": "^3.10.1",
    "prettier": "^3.0.0",
    "signale": "^1.4.0"
  },
  "babel": {
    "presets": [
      [
        "@pixas/babel-preset-lib",
        {
          "targets": {
            "node": 12
          }
        }
      ]
    ]
