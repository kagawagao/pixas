{
  "name": "@pixas/cli",
  "version": "0.11.0",
  "description": "front end develop toolkit",
  "author": "kagawa <kingsongao1221@gmail.com>",
  "homepage": "",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "bin": "bin",
    "test": "__tests__"
  },
  "files": [
    "bin",
    "lib",
    "index.ejs"
  ],
  "bin": {
    "pixas": "./bin/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kagawagao/pixas.git"
