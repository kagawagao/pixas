    "@pixas/bundler-webpack": "^0.11.0",
    "@types/less": "^3.0.3",
    "@types/react-dev-utils": "^9.0.11",
    "@types/webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "@pixas/bundler-mako": "*",
    "@pixas/bundler-vite": "*",
